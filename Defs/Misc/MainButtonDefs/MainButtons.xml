<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <MainButtonDef>
    <defName>Inspect</defName>
    <label>inspect</label>
    <tabWindowClass>MainTabWindow_Inspect</tabWindowClass>
    <buttonVisible>false</buttonVisible>
  </MainButtonDef>
  
  <MainButtonDef>
    <defName>Architect</defName>
    <label>architect</label>
    <description>Designate where to build, farm, store items, and so on.</description>
    <tabWindowClass>MainTabWindow_Architect</tabWindowClass>
    <order>1</order>
    <defaultHotKey>Tab</defaultHotKey>
  </MainButtonDef>
  
  <MainButtonDef>
    <defName>Work</defName>
    <label>work</label>
    <description>Choose which colonist does what kinds of work, and in what order.</description>
    <tabWindowClass>MainTabWindow_Work</tabWindowClass>
    <order>10</order>
    <defaultHotKey>F1</defaultHotKey>
  </MainButtonDef>

  <MainButtonDef>
    <defName>Restrict</defName>
    <label>restrict</label>
    <description>Restrict colonists to certain activities at certain times of day, or to specific allowed areas.</description>
    <tabWindowClass>MainTabWindow_Restrict</tabWindowClass>
    <order>20</order>
    <defaultHotKey>F2</defaultHotKey>
  </MainButtonDef>
  
  <MainButtonDef>
    <defName>Assign</defName>
    <label>assign</label>
    <description>Assign behaviors to colonists like what they should wear, what drugs to take, or how to respond to enemies.</description>
    <tabWindowClass>MainTabWindow_Assign</tabWindowClass>
    <order>30</order>
    <defaultHotKey>F3</defaultHotKey>
  </MainButtonDef>
  
  <MainButtonDef>
    <defName>Animals</defName>
    <label>animals</label>
    <description>Configure how the colony's tame animals should be treated.</description>
    <tabWindowClass>MainTabWindow_Animals</tabWindowClass>
    <order>40</order>
    <buttonVisible>false</buttonVisible>
  </MainButtonDef>

  <MainButtonDef>
    <defName>Wildlife</defName>
    <label>wildlife</label>
    <description>List wild animals in the area and designate them for hunting or taming.</description>
    <tabWindowClass>MainTabWindow_Wildlife</tabWindowClass>
    <order>50</order>
    <buttonVisible>false</buttonVisible>
  </MainButtonDef>

  <MainButtonDef>
    <defName>Mars</defName>
    <label>Fleet</label>
    <description>Manage your fleet.</description>
    <tabWindowClass>MarsX.MainTabWindow_Fleet</tabWindowClass>
    <order>55</order>
    <defaultHotKey>F4</defaultHotKey>
  </MainButtonDef>

  <MainButtonDef>
    <defName>Research</defName>
    <label>research</label>
    <description>Examine and decide on research projects.</description>
    <workerClass>MainButtonWorker_ToggleResearchTab</workerClass>
    <tabWindowClass>MainTabWindow_Research</tabWindowClass>
    <order>60</order>
    <defaultHotKey>F5</defaultHotKey>
    <buttonVisible>false</buttonVisible>
  </MainButtonDef>

  <MainButtonDef>
    <defName>World</defName>
    <label>world</label>
    <description>Examine the world map, form, and manage caravans.</description>
    <workerClass>MainButtonWorker_ToggleWorld</workerClass>
    <order>70</order>
    <defaultHotKey>F6</defaultHotKey>
    <validWithoutMap>true</validWithoutMap>
  </MainButtonDef>

  <MainButtonDef>
    <defName>History</defName>
    <label>history</label>
    <description>Review historical records.</description>
    <tabWindowClass>MainTabWindow_History</tabWindowClass>
    <order>80</order>
    <defaultHotKey>F7</defaultHotKey>
    <validWithoutMap>true</validWithoutMap>
    <buttonVisible>false</buttonVisible>
  </MainButtonDef>

  <MainButtonDef>
    <defName>Factions</defName>
    <label>factions</label>
    <description>Review the other factions on this world and their relationships.</description>
    <tabWindowClass>MainTabWindow_Factions</tabWindowClass>
    <order>90</order>
    <defaultHotKey>F8</defaultHotKey>
    <validWithoutMap>true</validWithoutMap>
    <buttonVisible>false</buttonVisible>
  </MainButtonDef>

  <MainButtonDef>
    <defName>Menu</defName>
    <label>menu</label>
    <description>Change options, save, load, or quit the game.</description>
    <tabWindowClass>MainTabWindow_Menu</tabWindowClass>
    <canBeTutorDenied>false</canBeTutorDenied>
    <order>500</order>
    <validWithoutMap>true</validWithoutMap>
  </MainButtonDef>


</Defs>

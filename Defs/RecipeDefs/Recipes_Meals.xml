<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <RecipeDef ParentName="CookMealBase">
    <defName>CookMealFine</defName>
    <label>cook fine meal</label>
    <description>Cook a somewhat complex meal from a combination of meat and plant ingredients.</description>
    <jobString>Cooking fine meal.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Condiment</li>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>0.1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.25</count>
      </li>
    </ingredients>
    <products>
      <MealFine>1</MealFine>
    </products>
    <skillRequirements>
      <Cooking>6</Cooking>
    </skillRequirements>
  </RecipeDef>

  <RecipeDef ParentName="CookMealBase">
    <defName>CookMealFineBulk</defName>
    <label>cook fine meal x4</label>
    <description>Cook 4 somewhat complex meals from a combination of meat and plant ingredients.</description>
    <jobString>Cooking 4 fine meals.</jobString>
    <workAmount>1800</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>1.0</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>1.0</count>
      </li>
    </ingredients>
    <products>
      <MealFine>4</MealFine>
    </products>
    <skillRequirements>
      <Cooking>6</Cooking>
    </skillRequirements>
  </RecipeDef>



</Defs>

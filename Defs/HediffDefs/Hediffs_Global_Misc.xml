<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>muscleAtrophe</defName>
    <description>Muscle atrophy is when muscles waste away. It's usually caused by a lack of physical activity. When a disease or injury makes it difficult or impossible for you to move an arm or leg, the lack of mobility can result in muscle wasting.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 0.7, 1.0)</defaultLabelColor>
    <label>Muscle atrophy</label>
    <minSeverity>0</minSeverity>
    <maxSeverity>0.9</maxSeverity>
    <makesSickThought>false</makesSickThought>
    <isBad>false</isBad>
    <stages>
      <li>
        <label>initial-hidden</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.15</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.6</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.8</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.45</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.45</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>


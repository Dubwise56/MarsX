	<ThingDef Name="RoverBase" ParentName="BuildingBase">
		<defName>Curiosity</defName>
		<thingClass>Building</thingClass>
		<label>Curiosity</label>
		<description>Curiosity is a car-sized robotic rover.</description>
		<graphicData>
			<texPath>Things/Building/curiosity</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5,5)</drawSize>
		</graphicData>
		<category>Building</category>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<selectable>true</selectable>
		<fillPercent>0.20</fillPercent>
		<pathCost>8</pathCost>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<rotatable>true</rotatable>
		<statBases>
			<MaxHitPoints>350</MaxHitPoints>
			<WorkToBuild>1000</WorkToBuild>
			<Flammability>0.0</Flammability>
			<Beauty>-12</Beauty>
		</statBases>
		<killedLeavings>
			<ChunkSlagSteel>2</ChunkSlagSteel>
		</killedLeavings>
		<size>(3,3)</size>
		<costList>
			<RimatomicsRTG>1</RimatomicsRTG>
			<ComponentSpacer>4</ComponentSpacer>
			<ComponentIndustrial>20</ComponentIndustrial>
			<Aluminium>135</Aluminium>
			<Gold>30</Gold>
		</costList>
		<building>
			<claimable>false</claimable>
			<alwaysDeconstructible>true</alwaysDeconstructible>
		</building>
	</ThingDef>


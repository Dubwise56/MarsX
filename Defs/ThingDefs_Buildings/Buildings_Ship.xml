	<ThingDef ParentName="BuildingBase">
		<defName>Ship</defName>
		<label>Ares ILAV</label>
		<description>The Interplanetary Landing and Ascent Vehicle is a reusable launch vehicle designed to land on and take off from the surface of mars.</description>
		<thingClass>mars.Fleet_ShipBuilding</thingClass>		
		<category>Building</category>
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
			<texPath>Things/Building/ships/CrewLanded</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(7,11)</drawSize>
		</graphicData>
		<pathCost>35</pathCost>
		<blockWind>true</blockWind>
		<passability>Impassable</passability>
		<fillPercent>0.8</fillPercent>
		<size>(3,7)</size>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<Flammability>0</Flammability>
			<Beauty>-20</Beauty>
			<WorkToBuild>12000</WorkToBuild>
		</statBases>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<killedLeavings>
			<ChunkSlagSteel>2</ChunkSlagSteel>
		</killedLeavings>
		<costList>
			<Component>50</Component>
			<Steel>500</Steel>
			<Plasteel>500</Plasteel>
		</costList>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="mars.CompProperties_Pipe">
				<mode>Gas</mode>
			</li>
			<li Class="mars.CompProperties_Pipe">
				<mode>Water</mode>
			</li>
			<li Class="CompProperties_Battery">
				<storedEnergyMax>4000</storedEnergyMax>
				<efficiency>0.5</efficiency>
				<startElectricalFires>true</startElectricalFires>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="mars.CompProperties_StorageTank">
				<compClass>mars.CompStorageTank</compClass>
				<compounds>
					<li>O2</li>
					<li>N2</li>
				</compounds>	
				<capacity>					
					<li>100000</li>
					<li>100000</li>
				</capacity>
				<start>					
					<li>100000</li>
					<li>100000</li>
				</start>
			</li>
			<li Class="mars.CompProperties_LiquidTank">
				<compClass>mars.CompLiquidTank</compClass>
				<compounds>
					<li>H2O</li>
				</compounds>	
				<capacity>					
					<li>100000</li>
				</capacity>
				<start>					
					<li>100000</li>
				</start>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>

		<building>
			<ignoreNeedsPower>true</ignoreNeedsPower>
			<alwaysDeconstructible>true</alwaysDeconstructible>
		</building>
		<selectable>true</selectable>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<!-- <drawerType>MapMeshOnly</drawerType> -->
		<repairEffect>ConstructMetal</repairEffect>
	</ThingDef>


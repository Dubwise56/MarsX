<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef>
		<defName>ShipLand</defName>
		<label>drop pod (incoming)</label>
		<thingClass>MarsX.Fleet_ShipLander</thingClass>
		<category>Ethereal</category>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Building/ships/CrewLanded</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutSkin</shaderType>
			<drawSize>(7,11)</drawSize>
		</graphicData>
		<altitudeLayer>Skyfaller</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<drawOffscreen>true</drawOffscreen>
		<passability>Impassable</passability>
	</ThingDef>

	<ThingDef>
		<defName>ShipLaunch</defName>
		<label>drop pod (incoming)</label>
		<thingClass>MarsX.Fleet_ShipLauncher</thingClass>
		<category>Ethereal</category>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Building/ships/CrewLanded</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutSkin</shaderType>
			<drawSize>(7,11)</drawSize>
		</graphicData>
		<altitudeLayer>Skyfaller</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<drawOffscreen>true</drawOffscreen>
		<passability>Impassable</passability>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>Ship</defName>
		<label>Ares ILAV</label>
		<description>The Interplanetary Landing and Ascent Vehicle is a reusable launch vehicle designed to land on and take off from the surface of planets.</description>
		<thingClass>MarsX.Fleet_ShipBuilding</thingClass>		
		<category>Building</category>
		<altitudeLayer>Building</altitudeLayer>
		<graphicData>
      <texPath>Things/Building/ships/A/Ship</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(10,10)</drawSize>
		</graphicData>
		<pathCost>35</pathCost>
		<blockWind>true</blockWind>
		<passability>Impassable</passability>
		<fillPercent>0.8</fillPercent>
		<size>(7,7)</size>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<Flammability>0</Flammability>
			<Beauty>-20</Beauty>
			<WorkToBuild>12000</WorkToBuild>
		</statBases>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<killedLeavings>
			<ChunkSlagSteel>10</ChunkSlagSteel>
		</killedLeavings>
    <inspectorTabs>
      <li>MarsX.ITab_ShipInventory</li>
      <li>MarsX.ITab_ShipCrew</li>
    </inspectorTabs>
		<costList>
			<ComponentIndustrial>50</ComponentIndustrial>
			<Steel>500</Steel>
			<Plasteel>500</Plasteel>
		</costList>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="MarsX.CompProperties_Pipe">
				<mode>Gas</mode>
			</li>
			<li Class="MarsX.CompProperties_Pipe">
				<mode>Water</mode>
			</li>
			<li Class="CompProperties_Battery">
				<storedEnergyMax>4000</storedEnergyMax>
				<efficiency>0.99</efficiency>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="MarsX.CompProperties_StorageTank">
				<compClass>MarsX.CompStorageTank</compClass>
				<compounds>
					<li>O2</li>
					<li>N2</li>
				</compounds>	
				<capacity>					
					<li>100000</li>
					<li>100000</li>
				</capacity>
				<start>					
					<li>100000</li>
					<li>100000</li>
				</start>
			</li>
			<li Class="MarsX.CompProperties_LiquidTank">
				<compClass>MarsX.CompLiquidTank</compClass>
				<compounds>
					<li>H2O</li>
				</compounds>	
				<capacity>					
					<li>100000</li>
				</capacity>
				<start>					
					<li>100000</li>
				</start>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>

		<building>
      <!--<expandHomeArea>false</expandHomeArea>-->
      <alwaysDeconstructible>true</alwaysDeconstructible>
		</building>
		<selectable>true</selectable>
		<!-- <drawerType>MapMeshOnly</drawerType> -->
		<repairEffect>ConstructMetal</repairEffect>
	</ThingDef>


	<ThingDef ParentName="BuildingBase" Name="SupplyCrateBase">
		<defName>SupplyCrate</defName>
		<label>Supply Crate</label>
		<description>A supply crate from Earth.</description>
		<thingClass>MarsX.Building_Cargo</thingClass>
		<graphicData>
			<texPath>Things/Building/crate</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(2.2,2.2)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>false</castEdgeShadows>
		<blockLight>false</blockLight>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>800</WorkToBuild>
			<Flammability>0.0</Flammability>
		</statBases>
		<size>(2,2)</size>
		<rotatable>false</rotatable>
		<costList>
			<Plasteel>30</Plasteel>
			<Steel>30</Steel>
		</costList>
		<building>
			<isInert>true</isInert>
      <fixedStorageSettings>
				<filter>
					<categories>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter>
					<categories>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
	</ThingDef>

	<ThingDef ParentName="SupplyCrateBase">
		<defName>StorageCrate</defName>
		<label>Storage Crate</label>
		<description>A rugged crate used to store supplies.</description>
		<building>
			<isInert>true</isInert>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Manufactured</li>
						<li>Items</li>
						<li>Apparel</li>
						<li>Chunks</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter>
					<categories>
						<li>Manufactured</li>
						<li>Items</li>
						<li>Apparel</li>
						<li>Chunks</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
	</ThingDef>


</Defs>
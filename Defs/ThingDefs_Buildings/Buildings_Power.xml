<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="MinifiedBuildingBase">
		<defName>SolarGenerator</defName>
		<label>solar generator</label>
		<description>Produces electricity from sunlight. Does not work in the dark or under artificial light.</description>
		<thingClass>Building</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/SolarPanel</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,3)</drawSize>
			<damageData>
				<rect>(0,0.6,4,2.8)</rect>
			</damageData>
		</graphicData>
		<staticSunShadowHeight>0.00</staticSunShadowHeight>
		<castEdgeShadows>true</castEdgeShadows>
		<rotatable>true</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<fillPercent>0.5</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>2500</WorkToBuild>
			<Flammability>0.7</Flammability>
			<Mass>15</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(3,2)</size>
		<costList>
			<Steel>10</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<costStuffCount>90</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>MarsX.CompPowerPlantSolar</compClass>
				<basePowerConsumption>-1</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<designationCategory>Power</designationCategory>
		<designationHotKey>Misc5</designationHotKey>
		<researchPrerequisites>
			<li>SolarPanels</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>


	<ThingDef ParentName="BaseReactor" Class="Rimatomics.RimatomicsThingDef">
		<defName>LMFR</defName>
		<label>liquid metal fast reactor</label>
		<description>A liquid metal cooled nuclear reactor, liquid metal fast reactor or LMFR is an advanced type of nuclear reactor where the primary coolant is a liquid metal. The use of liquid metal as coolant allows for a compact design which makes it suitable for colonization projects.</description>
		<thingClass>MarsX.Building_LMFR</thingClass>
		<graphicData>
			<texPath>Things/Building/core</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<rect>(0.3,0,5.4,6)</rect>
			</damageData>
		</graphicData>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>10000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-40</Beauty>
		</statBases>
		<size>(3,3)</size>
		<costList>
			<Steel>450</Steel>
			<ComponentIndustrial>10</ComponentIndustrial>
			<ComponentSpacer>4</ComponentSpacer>
			<coreVessel>1</coreVessel>
		</costList>
		<designationCategory>Power</designationCategory>
		<building>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>NuclearFuel</li>
					</categories>
					<thingDefs>
						<li>UraniumNitride</li>
					</thingDefs>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>NuclearFuel</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
	</ThingDef>



	<ThingDef ParentName="BasedPower"  Class="Rimatomics.RimatomicsThingDef">
		<defName>CoolingRadiator</defName>
		<label>Radiator</label>
		<CoolingCapacityWatts>6000</CoolingCapacityWatts>
		<description>Small air coolers designed to provide cooling for small nuclear reactors when resources or space is limited.\n25kW cooling capacity</description>
		<thingClass>Rimatomics.Radiator</thingClass>
		<graphicData>
			<texPath>Rimatomics/Things/RimatomicsBuildings/nukeRadiator</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(4,4)</drawSize>
			<shadowData>
				<volume>(0.9, 0.9, 0.9)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
			<allowFlip>false</allowFlip>
			<color>(0.23, 0.23, 0.23, 1)</color>
		</graphicData>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<canOverlapZones>false</canOverlapZones>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.5</fillPercent>
		<blockLight>true</blockLight>
		<holdsRoof>true</holdsRoof>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>8000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<pathCost>250</pathCost>
		<size>(3,3)</size>
		<costList>
			<Steel>350</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<tickerType>Normal</tickerType>
		<comps>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li Class="Rimatomics.CompProperties_Pipe">
				<mode>Cooling</mode>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>950</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="Rimatomics.CompProperties_Upgradable"/>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
			<li>Rimatomics.PlaceWorker_ResearchStage</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<building>
			<canPlaceOverWall>true</canPlaceOverWall>
		</building>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>

	<ThingDef ParentName="BuildingBase" Class="Rimatomics.RimatomicsThingDef">
		<defName>Thermocouple</defName>
		<label>TEG</label>
		<description>Thermoelectric Generator. A solid state device that converts heat directly into electrical energy, 4 TEG's will max the power output from 1 reactor, connect to a reactor core via heat pipes.</description>
		<thingClass>MarsX.Building_Thermocouple</thingClass>
		<TurbineCapacityWatts>3000</TurbineCapacityWatts>
		<graphicData>
			<texPath>Things/Building/thermocouple</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2.2,2.2)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<blockLight>false</blockLight>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-40</Beauty>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(2,1)</size>
		<costList>
			<Steel>425</Steel>
			<ComponentIndustrial>8</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="Rimatomics.CompProperties_Pipe">
				<mode>HighVoltage</mode>
			</li>
			<li Class="Rimatomics.CompProperties_Pipe">
				<mode>Steam</mode>
			</li>
			<li Class="Rimatomics.CompProperties_Pipe">
				<mode>ColdWater</mode>
			</li>
			<li Class="Rimatomics.CompProperties_Pipe">
				<mode>Cooling</mode>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<rotatable>false</rotatable>
		<designationCategory>Power</designationCategory>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<constructEffect>ConstructMetal</constructEffect>
	</ThingDef>



	<ThingDef ParentName="BuildingBase" Class="Rimatomics.RimatomicsThingDef">
		<defName>MarsTransformer</defName>
		<label>High Voltage Transformer</label>
		<thingClass>Rimatomics.Transformer</thingClass>
		<graphicData>
			<texPath>Things/Building/transformer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
			<shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.5</fillPercent>
		<blockLight>false</blockLight>
		<statBases>
			<MaxHitPoints>350</MaxHitPoints>
			<WorkToBuild>1800</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<description>Provides the final voltage transformation from the Thermoelectric Generators, stepping down the voltage used in the high voltage lines to the level used by power conduits.</description>
		<size>(2,2)</size>
		<costList>
			<Steel>350</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<tickerType>Normal</tickerType>
		<designationCategory>Power</designationCategory>
		<comps>
			<li Class="Rimatomics.CompProperties_Pipe">
				<mode>HighVoltage</mode>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerPlant</compClass>
				<basePowerConsumption>0</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>3</heatPerSecond>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<building>
			<soundAmbient>transformer</soundAmbient>
		</building>
	</ThingDef>


</Defs>
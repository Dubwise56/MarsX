		<scenario>
			<summary>Martian Colony (Normal)</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>PlayerColony</factionDef>
			</playerFaction>
			<parts>
				<!-- STARTING MATERIALS -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>3</pawnCount>
				</li>

        <li Class="MarsX.ScenPart_Planet">
          <def>ScenPart_Planet</def>
          <planet>Mars</planet>
        </li>

				<li Class="MarsX.ScenPart_ColonyMission">
					<def>missionMode</def>
					<MissionMode>Colony</MissionMode>
					<shipCount>3</shipCount>
					<fastMode>false</fastMode>
				</li>
      </parts>
		</scenario>
	</ScenarioDef>
